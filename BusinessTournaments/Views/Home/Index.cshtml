
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h3>Company Id: @Model</h3>

<div class="container-fluid indexGrid">
    <div class="highscore wrapper upperRoundCorners">
        <div class="lessOpacity">
            Players
            <table>
                <thead>
                    <tr>
                        <th>Score</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="leaderboard">
                </tbody>
            </table>
        </div>
    </div>
    <div class="selected wrapper roundCorners">
        <div class="lessOpacity">
            Selected Players
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody id="selected">
                </tbody>
            </table>
            <input type="text" id="tournamentNameInput" />
            <button onclick="startTournament()">CREATE TOURNAMENT</button>
        </div>
    </div>
    <div class="ongoingTournaments wrapper roundCorners">
        <div class="lessOpacity">
            Ongoing Tournaments
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Tournament Name</th>
                        <th style="text-align: right;">Last Modified</th>
                    </tr>
                </thead>
                <tbody id="ongoing">
                </tbody>
            </table>
        </div>
    </div>
    <div class="completedTournaments wrapper roundCorners">
        <div class="lessOpacity">
            Completed Tournaments
            <table>
                <thead>
                    <tr>
                        <th>Tournament Name</th>
                        <th style="text-align: right" ;>Last Modified</th>
                    </tr>
                </thead>
                <tbody id="completed">
                </tbody>
            </table>
        </div>
    </div>
    <div class="addPlayer lowerRoundCorners">
        <div class="lessOpacity" id="alignCenter">
            <button type="button" class="btn btn-info btn-default" data-toggle="modal" data-target="#addPlayerModal">Add New Player</button>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="addPlayerModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add New Player</h4>
            </div>
            <div class="modal-body" id="modalPlayerNames">
                <div id="pndiv0">
                    <input type="text" id="pninp0" placeholder="Enter player name here..." />
                    <input type="button" class="btn btn-default hidden" aria-label="Add Another Player" value="+" id="pnbtn0" onclick="addAddPlayerField(this)" />
                </div>
            </div>
            <input type="button" value="Add Player" onclick="addPlayers()" />
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script src="~/js/index.js"></script>
}
