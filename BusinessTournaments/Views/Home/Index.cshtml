
@{
    ViewData["Title"] = "Index";
}

<div class="wrapper">
    <div class="grid-container">
        <div class="CompanyName roundCorners wrapper">

            <h3>Company  @User.Identity.Name</h3>

        </div>
        <div class="Leaderboard roundCorners wrapper">

            <div class="lessOpacity"  data-simplebar>
                <table>
                    <thead>
                        <tr>
                            <th width="10%" class="lessOpacity">Edit</th>
                            <th width="20%">Score</th>
                            <th width="40%">Player Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="leaderboard">
                    </tbody>
                </table>
            </div>

        </div>
        <div class="Selected roundCorners wrapper">

            <div class="lessOpacity">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Selected Player Name</th>
                        </tr>
                    </thead>
                    <tbody id="selected">
                    </tbody>
                </table>
            </div>

        </div>
        <div class="TournamentName roundCorners">

            <div class="roundCorners">
                <input type="text" class="input-group input-group-lg roundCorners" placeholder="Enter tournament name..." id="tournamentNameInput" onkeyup="checkIfValidInput(this)" />
            </div>

        </div>
        <div class="StartTournament roundCorners">

            <div class="inline">
                <div class="lessOpacity eightyWide" style="float: left;">
                    <input type="button" id="startTournament" class="btn btn-secondary btn-block" onclick="startTournament()" value="CREATE TOURNAMENT" disabled />
                </div>
                <div class="lessOpacity twentyWide" style="float: right;">
                    <input type="button" onclick="clearSelected()" id="clearSelectedBtn" class="btn btn-danger btn-block" value="CLEAR" disabled />
                </div>
            </div>

        </div>
        <div class="AddPlayers roundCorners">

            <div>
                <button type="button" class="btn btn-success btn-block" id="addPlayerModalBtn">Add New Player</button>
            </div>

        </div>
        <div class="Completed roundCorners">

            <div class="lessOpacity">
                <table>
                    <thead>
                        <tr>
                            <th><b style="color: red;">Completed Tournaments</b></th>
                            <th style="text-align: right" ;>Datum</th>
                        </tr>
                    </thead>
                    <tbody id="completed">
                    </tbody>
                </table>
            </div>

        </div>
        <div class="Ongoing roundCorners wrapper">

            <div class="lessOpacity">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th><b style="color: blue;">Ongoing Tournaments</b></th>
                            <th>Datum</th>
                            <th>Delete</th>

                        </tr>
                    </thead>
                    <tbody id="ongoing">
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

