
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid ninetyWide">
    <h3>Company  @User.Identity.Name</h3>
</div>
<div class="container-fluid indexGrid ninetyWide">
    <div class="highscore wrapper roundCorners">
        <div class="lessOpacity">
            Players
            <table>
                <thead>
                    <tr>
                        <th>Score</th>
                        <th>Name</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="leaderboard">
                </tbody>
            </table>
        </div>
    </div>
    <div class="selected wrapper roundCorners">
        <div class="lessOpacity">
            Selected Players
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody id="selected">
                </tbody>
            </table>
        </div>
    </div>
    <div class="addTournamentName roundCorners">
        <div class="roundCorners">
            <input type="text" class="inputWide roundCorners" placeholder="Enter tournament name..." id="tournamentNameInput" />
        </div>
    </div>
    <div class="addTournament roundCorners">
        <div class="inline">
            <div class="lessOpacity eightyWide" style="float: left;">
                <input type="button" id="startTournament" class="btn btn-success btn-block" onclick="startTournament()" value="CREATE TOURNAMENT" />
            </div>
            <div class="lessOpacity twentyWide" style="float: right;">
                <input type="button" onclick="clearSelected()" id="clearSelectedBtn" class="btn btn-danger btn-block" value="CLEAR" />
            </div>
        </div>
    </div>
    <div class="ongoingTournaments wrapper roundCorners">
        <div class="lessOpacity">
            Ongoing Tournaments
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Tournament Name</th>
                        <th style="text-align: right;">Datum</th>
                    </tr>
                </thead>
                <tbody id="ongoing">
                </tbody>
            </table>
        </div>
    </div>
    <div class="completedTournaments wrapper roundCorners">
        <div class="lessOpacity">
            Completed Tournaments
            <table>
                <thead>
                    <tr>
                        <th>Tournament Name</th>
                        <th style="text-align: right" ;>Datum</th>
                    </tr>
                </thead>
                <tbody id="completed">
                </tbody>
            </table>
        </div>
    </div>
    <div class="addPlayer roundCorners">
        <div >
            <button type="button" class="btn btn-success btn-block" data-toggle="modal" data-target="#addPlayerModal">Add New Player</button>
        </div>
    </div>
    <div class="break roundCorners">
        <div class="lessOpacity">
        </div>
    </div>
</div>

<div id="addPlayerModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add New Player</h4>
            </div>
            <div class="modal-body" id="modalPlayerNames">
                <div id="pndiv0">
                    <input type="text" id="pninp0" placeholder="Enter player name here..." />
                    <input type="button" class="btn btn-default hidden" aria-label="Add Another Player" value="+" id="pnbtn0" onclick="addAddPlayerField(this)" />
                </div>
            </div>
            <input type="button" value="Add Player" onclick="addPlayers()" />
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div id="editPlayerModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Player</h4>
            </div>
            <div class="modal-body" id="modalEditPlayer">

                    <input type="text" id="editPlayerName" placeholder="Enter new player name here..." value="" />
                    <input type="button" class="btn btn-default hidden" aria-label="Add Another Player" value="+" id="pnbtn0" onclick="addAddPlayerField(this)" />

            </div>
            <input type="button" value="Add Player" onclick="addPlayers()" />
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script src="~/js/index.js"></script>
}
