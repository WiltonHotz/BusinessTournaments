<!DOCTYPE html>

<html>
<head>
    @RenderSection("styles", required: false)

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simplebar@5.1.0/dist/simplebar.css" />
    <meta name="viewport" content="width=device-width" initial-scale="1" />
    <title>Business Tournaments - @User.Identity.Name</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
     
</head>
<body>
    @*<div>*@
    @RenderBody()
    @*</div>*@

    <!-- [SIDEBAR]-->
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

        <ul>
            <li>
                <a href="#">ABOUT</a>
            </li>
            <li>
                <a href="javascript:void openAboutModal()">About</a>

            </li>
            <li>
                <a href="javascript:void openHelpModal()">Help</a>
            </li>
            <li class="dropdown">
                <a href="javascript:void clearPlayerScores()" >CLEAR SCORES</a>
            </li>
            <li class="dropdown">
                <a href="javascript:void(0)" class="dropbtn">THEME</a>
                <div class="dropdown-content" id="themes">

                </div>
            </li>
        </ul>
        <div id="logoutDiv">
            @*<form method="post" asp-controller="Account" asp-action="Logout"><input type="submit" value="Logout" class="btn btn-primary" />*@
            <a asp-controller="Account" asp-action="Logout">LOG OUT</a>
            @*</form>*@
        </div>

    </div>

    <!-- [HELP MODAL] -->
    <div id="helpModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-notify modal-info ">

            <div class="modal-content bg-dark text-white">
                <div class="modal-header">
                    <h4 style="font-family: Abel-Regular;" class="heading">Help</h4>
                    <button type="button" id="modalClose" class="close white-text" data-dismiss="modal">
                        <span aria-hidden="true" class="white-text">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Ring 112</p>
                </div>
                <div class="modal-footer flex-center no-border">
                    <button type="button" id="modalClose" class="close white-text" data-dismiss="modal"> </button>
                </div>
            </div>

        </div>
    </div>

    <!-- [ABOUT MODAL] -->
    <div id="aboutModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-notify modal-info ">

            <div class="modal-content bg-dark text-white">
                <div class="modal-header">
                    <h4 style="font-family: Abel-Regular;" class="heading">Help</h4>
                    <button type="button" id="modalClose" class="close white-text" data-dismiss="modal">
                        <span aria-hidden="true" class="white-text">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Hej hej</p>
                </div>
                <div class="modal-footer flex-center no-border">
                    <button type="button" id="modalClose" class="close white-text" data-dismiss="modal"> </button>
                </div>
            </div>

        </div>
    </div>

    <!-- [JQUERY & VALIDATE] -->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>

    <!-- [BOOTSTRAP SCRIPTS] -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    @RenderSection("scripts", false)

</body>
</html>
